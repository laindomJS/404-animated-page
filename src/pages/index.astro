---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Not Found 404">
	<main>
		<header class="nav-container">
			<a class="home" href="#">X-JS</a>
			<ul class="menu-container">
				<li class="menu-item">Home</li>
				<li class="menu-item">About</li>
				<li class="menu-item">Contact</li>
			</ul>
		</header>
	</main>
</Layout>

<style>
	header.nav-container {
		padding: 2rem 4rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	a.home {
		color: #000;
		font-size: 22px;
		font-weight: 700;
		text-decoration: none;
	}
	ul.menu-container {
		display: flex;
		align-items: center;
	}
	li.menu-item {
		list-style: none;	
		margin: 0 1rem;
		font-weight: 600;
		font-size: 18px;
		cursor: pointer;
		transition: transform .2s ease-in;
	}
	li.menu-item:hover {
		transform: scale(1.2);
	}
</style>
